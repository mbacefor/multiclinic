	<!-- If you are using JBoss AS7 with non JTA transaction then use this persistence-unit -->
	<!-- -->
	<persistence-unit name="bookmark-ds" transaction-type="RESOURCE_LOCAL">
		<!-- <non-jta-data-source>java:jboss/datasources/ExampleDSFile</non-jta-data-source> -->
		<jta-data-source>java:jboss/datasources/PostgreSQLDS</jta-data-source>
		<class>br.com.linkedmed.domain.Bookmark</class>
		<class>br.com.linkedmed.domain.Usuario</class>
		<class>br.com.linkedmed.domain.Funcionalidade</class>
		<class>br.com.linkedmed.domain.Perfil</class>
		<class>br.com.linkedmed.domain.Convenio</class>
		<class>br.com.linkedmed.domain.AreaEspecialidade</class>
		<class>br.com.linkedmed.domain.Clinica</class>
		<class>br.com.linkedmed.domain.Profissional</class>
		<class>br.com.linkedmed.domain.Sala</class>
		<class>br.com.linkedmed.domain.Equipamento</class>
		<class>br.com.linkedmed.domain.Paciente</class>
		<class>br.com.linkedmed.domain.Evento</class>

		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.connection.charSet" value="UTF-8" />

			<!-- <property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
		</properties>
	</persistence-unit>

